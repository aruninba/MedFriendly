            </stroke>

            <!-- If you want to add some padding -->
            <padding
                android:bottom="4dp"
                android:left="-4dp"
                android:right="-4dp"
                android:top="4dp">
            </padding>


            <!-- Here is the corner radius -->
            <corners
                android:radius="5dp">
            </corners>

        </shape>
    </item>

</selector>


